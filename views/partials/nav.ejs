 <header class="bg-white border-b border-gray-200 fixed w-full top-0 z-50">
  <div class="bg-gradient-to-r from-red-500 to-red-600 h-1"></div>
  <nav class="container mx-auto px-4 py-3">
    <div class="flex justify-between items-center">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-2 group">
        <svg class="w-8 h-8 text-red-500" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12.0002 1.75C9.03266 1.75 6.25 3.8791 6.25 7.03344C6.25 8.92844 7.13953 10.7678 8.29297 12.6316C9.47391 14.5379 11.0644 16.4942 12.0002 17.6152C12.9359 16.4942 14.5264 14.5379 15.7074 12.6316C16.8608 10.7678 17.7504 8.92844 17.7504 7.03344C17.7504 3.8791 14.9677 1.75 12.0002 1.75Z"/>
        </svg>
        <span class="text-xl font-bold text-gray-800 group-hover:text-red-500 transition-colors duration-200">airbnb</span>
      </a>

      <!-- Main Navigation -->
      <div class="hidden md:flex items-center space-x-1">
        <% if (isLoggedIn) { %>
          <% if (user && user.userType=== 'guest') { %>
          <a 
            href="/homes"
            class="flex items-center px-4 py-2 rounded-lg text-gray-700 hover:bg-red-50 hover:text-red-600 transition-all duration-200 <%= currentPage === 'Home' ? 'bg-red-50 text-red-600': '' %>"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
            </svg>
            Homes
          </a>

          <a
            href="/favourites"
            class="flex items-center px-4 py-2 rounded-lg text-gray-700 hover:bg-red-50 hover:text-red-600 transition-all duration-200 <%= currentPage === 'favourites' ? 'bg-red-50 text-red-600': '' %>"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
            </svg>
            Favorites
          </a>

          <a
            href="/bookings"
            class="flex items-center px-4 py-2 rounded-lg text-gray-700 hover:bg-red-50 hover:text-red-600 transition-all duration-200 <%= currentPage === 'bookings' ? 'bg-red-50 text-red-600': '' %>"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            Bookings
          </a>

          <div class="h-6 w-px bg-gray-200 mx-2"></div>
           <% } else { %>
          <a
            href="/host/host-home-list"
            class="flex items-center px-4 py-2 rounded-lg text-gray-700 hover:bg-red-50 hover:text-red-600 transition-all duration-200 <%= currentPage === 'host-homes' ? 'bg-red-50 text-red-600': '' %>"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
            </svg>
            My Listings
          </a>

          <a
            href="/host/add-home"
            class="flex items-center px-4 py-2 rounded-lg text-white bg-red-500 hover:bg-red-600 transition-all duration-200 shadow-md hover:shadow-lg transform hover:-translate-y-0.5"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
            Add Home
          </a>
        <% } %>
        <% } %>
      </div>
          
      <!-- Auth Buttons -->
      <div class="flex items-center space-x-2">
        <% if(!isLoggedIn) { %>
          <a 
            href="/login"
            class="px-4 py-2 text-gray-700 hover:text-red-600 transition-colors duration-200"
          >
            Log in
          </a>
          <a 
            href="/signup"
            class="px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition-all duration-200 shadow-md hover:shadow-lg transform hover:-translate-y-0.5"
          >
            Sign up
          </a>
        <% } else { %>
          <form action="/logout" method="POST">
            <button 
              type="submit" 
              class="flex items-center px-4 py-2 text-gray-700 hover:text-red-600 transition-colors duration-200"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
              </svg>
              Logout
            </button>
          </form>
        <% } %>
      </div>
    </div>

    <!-- Mobile Menu Button -->
    <button class="md:hidden fixed top-4 right-4 p-2 rounded-lg bg-gray-100 text-gray-600 hover:bg-gray-200 transition-colors duration-200">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
      </svg>
    </button>
  </nav>
</header>

<!-- Spacer for fixed header -->
<div class="h-16"></div>