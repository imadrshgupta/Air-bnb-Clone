<%- include('../partials/head') %>
</head>
<body class="bg-gray-50">
<%- include('../partials/nav') %>
  <main class="container mx-auto px-4 py-8 mt-10">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-12 space-y-4">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900">Your Favorite Places</h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">A collection of homes you've saved for future stays</p>
      </div>
   
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <% if (favouriteHomes.length === 0) { %>
          <div class="col-span-2 text-center py-16">
            <div class="max-w-md mx-auto space-y-4">
              <svg class="w-24 h-24 text-gray-300 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
              </svg>
              <h3 class="text-2xl font-semibold text-gray-700">No favorites yet</h3>
              <p class="text-gray-500">Start saving your favorite places to see them here</p>
              <a href="/homes" class="inline-block mt-4 px-6 py-3 bg-red-500 text-white rounded-lg hover:bg-red-600 transition-colors duration-200">
                Explore Homes
              </a>
            </div>
          </div>
        <% } %>
        
        <% favouriteHomes.forEach(home => { %>
          <div class="bg-white rounded-2xl shadow-md overflow-hidden hover:shadow-xl transition-all duration-300 border border-gray-100 group">
            <div class="relative">
              <img 
                src="<%= home.photoUrl %>" 
                alt="<%= home.houseName %>" 
                class="w-full h-80 object-cover transition-transform duration-700 group-hover:scale-105"
              >
              <div class="absolute top-4 right-4">
                <div class="bg-white/90 backdrop-blur-sm rounded-full px-3 py-1 flex items-center shadow-lg">
                  <svg class="w-5 h-5 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                  <span class="ml-1 font-medium"><%= home.rating %>/5</span>
                </div>
              </div>
            </div>

            <div class="p-6 space-y-4">
              <div>
                <h3 class="text-2xl font-semibold text-gray-800 mb-2"><%= home.houseName %></h3>
                <div class="flex items-center text-gray-600">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                  <%= home.location %>
                </div>
              </div>

              <div class="flex justify-between items-end pt-4">
                <div>
                  <p class="text-3xl font-bold text-gray-800">$<%= home.price %></p>
                  <p class="text-sm text-gray-600">per night</p>
                </div>
                <div class="flex space-x-3">
                  <a 
                    href="/homes/<%= home._id %>" 
                    class="px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition-all duration-200 shadow-sm hover:shadow-md transform hover:-translate-y-0.5 flex items-center space-x-2"
                  >
                    <span>View Details</span>
                  </a>
                  <form action="/favourites/delete/<%= home._id %>" method="POST" class="inline-block">
                    <button 
                      type="submit"
                      class="px-4 py-2 border border-red-500 text-red-500 rounded-lg hover:bg-red-50 transition-all duration-200 flex items-center space-x-2"
                      onclick="return confirm('Are you sure you want to remove this from favorites?')"
                    >
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z"/>
                      </svg>
                      <span>Remove</span>
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </main>
</body>
</html>