<%- include('../partials/head') %>
</head>
<body class="bg-gray-50">
<%- include('../partials/nav') %>
  <main class="container mx-auto px-4 py-8 mt-10">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-10 space-y-4">
        <h2 class="text-4xl font-bold text-gray-900">Find Your Perfect Stay</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">Discover unique homes and experiences across the world</p>
      </div>
   
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <% registeredHomes.forEach(home => { %>
          <div class="bg-white rounded-2xl shadow-md overflow-hidden hover:shadow-xl transition-all duration-300 border border-gray-100 group">
            <div class="relative">
              <img 
                src="<%= home.photoUrl %>" 
                alt="<%= home.houseName %>" 
                class="w-full h-72 object-cover transition-transform duration-700 group-hover:scale-105"
              >
              <div class="absolute top-4 right-4">
                <%- include('../partials/favourite.ejs', {home: home}) %>
              </div>
            </div>

            <div class="p-6 space-y-4">
              <div class="flex justify-between items-start">
                <div>
                  <h3 class="text-2xl font-semibold text-gray-800 mb-1"><%= home.houseName %></h3>
                  <div class="flex items-center text-gray-600">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                    <%= home.location %>
                  </div>
                </div>
                <div class="flex items-center bg-yellow-100 px-3 py-1 rounded-full">
                  <svg class="w-5 h-5 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                  <span class="ml-1 font-medium text-yellow-700"><%= home.rating %>/5</span>
                </div>
              </div>

              <div class="flex justify-between items-end mt-4">
                <div>
                  <p class="text-3xl font-bold text-gray-800">$<%= home.price %></p>
                  <p class="text-sm text-gray-600">per night</p>
                </div>
                <a 
                  href="/homes/<%= home._id %>"
                  class="inline-flex items-center px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition-all duration-200 shadow-sm hover:shadow-md transform hover:-translate-y-0.5"
                >
                  View Details
                  <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
   </main>
  </body>
</html>