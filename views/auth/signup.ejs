<%- include('../partials/head') %>
</head>
<body class="bg-gradient-to-br from-gray-50 to-gray-100 min-h-screen">
  <%- include('../partials/nav') %>
  <main class="container mx-auto mt-8 p-4 sm:p-8">
    <div class="max-w-md mx-auto bg-white rounded-2xl shadow-xl p-8 space-y-6 border border-gray-100">
      <div class="text-center space-y-2">
        <h1 class="text-3xl font-bold text-gray-800 tracking-tight">
          Create Your Account
        </h1>
        <p class="text-gray-600">Join our community of travelers and hosts</p>
        <div class="w-20 h-1 bg-red-500 mx-auto rounded-full mt-4"></div>
      </div>

      <form action="/signup" method="POST" class="space-y-6">
      <%- include('../partials/errors') %>
        <div class="grid grid-cols-2 gap-4">
          <div class="group">
            <label for="firstName" class="block text-sm font-medium text-gray-700 mb-1">First Name</label>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
              </div>
              <input 
                type="text"
                id="firstName"
                name="firstName"
                placeholder="John" 
                value="<%= oldInput.firstName ? oldInput.firstName : '' %>"
                class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all duration-200 bg-gray-50 hover:bg-white"
                required
              />
            </div>
          </div>
          <div class="group">
            <label for="lastName" class="block text-sm font-medium text-gray-700 mb-1">Last Name</label>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
              </div>
              <input  
                type="text"
                id="lastName"
                name="lastName"
                placeholder="Doe" 
                value="<%= oldInput.lastName ? oldInput.lastName : '' %>"
                class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all duration-200 bg-gray-50 hover:bg-white"
              />
            </div>
          </div>
        </div>

        <div class="group">
          <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <input 
              type="email"
              id="email"
              name="email"
              placeholder="you@example.com" 
              value="<%= oldInput.email ? oldInput.email : '' %>"
              class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all duration-200 bg-gray-50 hover:bg-white"
              required
            />
          </div>
        </div>

        <div class="group">
          <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
              </svg>
            </div>
            <input
              type="password" 
              id="password"
              name="password" 
              placeholder="••••••••" 
              class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all duration-200 bg-gray-50 hover:bg-white"
              required
            />
            <button type="button" class="absolute inset-y-0 right-0 pr-3 flex items-center">
              <svg class="h-5 w-5 text-gray-400 hover:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
              </svg>
            </button>
          </div>
        </div>
        
        <div class="group">
          <label for="confirmPassword" class="block text-sm font-medium text-gray-700 mb-1">Confirm Password</label>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
              </svg>
            </div>
            <input
              type="password" 
              id="confirmPassword"
              name="confirmPassword" 
              placeholder="••••••••" 
              class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all duration-200 bg-gray-50 hover:bg-white"
              required
            />
            <button type="button" class="absolute inset-y-0 right-0 pr-3 flex items-center">
              <svg class="h-5 w-5 text-gray-400 hover:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
              </svg>
            </button>
          </div>
        </div>

        <div class="p-4 bg-gray-50 rounded-xl space-y-3">
          <label class="block text-sm font-medium text-gray-700">I am a:</label>
          <div class="flex space-x-6">
            <label class="relative flex items-center group cursor-pointer">
              <input type="radio" name="userType" value="guest" id="guest" class="sr-only peer" checked="<% oldInput.userType === "guest"%>" />
              <div class="w-10 h-10 rounded-lg flex items-center justify-center border-2 border-gray-300 peer-checked:border-red-500 peer-checked:bg-red-50 transition-all duration-200">
                <svg class="w-6 h-6 text-gray-500 peer-checked:text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
              </div>
              <span class="ml-2 text-sm text-gray-700">Guest</span>
            </label>
            <label class="relative flex items-center group cursor-pointer">
              <input type="radio" name="userType" value="host" id="host" class="sr-only peer"  checked="<% oldInput.userType === "host"%>" />
              <div class="w-10 h-10 rounded-lg flex items-center justify-center border-2 border-gray-300 peer-checked:border-red-500 peer-checked:bg-red-50 transition-all duration-200">
                <svg class="w-6 h-6 text-gray-500 peer-checked:text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                </svg>
              </div>
              <span class="ml-2 text-sm text-gray-700">Host</span>
            </label>
          </div>
        </div>
        
        <div class="flex items-center p-4 bg-gray-50 rounded-xl">
          <input 
            type="checkbox" 
            name="terms" 
            id="terms" 
            class="h-5 w-5 text-red-500 focus:ring-red-500 border-gray-300 rounded transition-all duration-200" 
            required 
          />
          <label for="terms" class="ml-3 block text-sm text-gray-700">
            I agree to the <a href="#" class="text-red-500 hover:text-red-600 font-medium underline">Terms and Conditions</a>
          </label>
        </div>

        <button
          type="submit"
          class="w-full bg-red-500 text-white py-4 px-6 rounded-xl hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transform transition-all duration-200 hover:scale-[1.02] font-medium text-lg shadow-lg shadow-red-500/20"
        >
          Create Account
        </button>
      </form>

      <div class="relative">
        <div class="absolute inset-0 flex items-center" aria-hidden="true">
          <div class="w-full border-t border-gray-200"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-2 bg-white text-gray-500">or</span>
        </div>
      </div>

      <p class="text-center text-sm text-gray-600">
        Already have an account? 
        <a href="/login" class="text-red-500 hover:text-red-600 font-medium inline-flex items-center group">
          Sign in
          <svg class="w-4 h-4 ml-1 transform transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
          </svg>
        </a>
      </p>
    </div>
  </main>  
 </body>
</html>